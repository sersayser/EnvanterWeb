
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Bildirdiğim Arızalar</h2>
<div class="p-3 col-9">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tarih</th>
                <th>Model</th>
                <th>Seri No</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in ViewBag.kullaniciArizaListesi)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Tarih</td>
                    <td>@item.cihaz.Model</td>
                    <td>@item.cihaz.SeriNo</td>
                    <td>@item.Aciklama</td>
                </tr>
            }

        </tbody>
    </table>
</div>

